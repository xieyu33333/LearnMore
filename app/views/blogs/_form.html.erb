<%= form_for(@blog) do |f| %>
  <% if @blog.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@blog.errors.count, "error") %> prohibited this blog from being saved:</h2>

      <ul>
      <% @blog.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <table class="table table-bordered blog_title">
    <tr>
      <th><%= f.label :标题： ,:class => 'editblog'%></td>
      <td><%= f.text_field :title, :class => 'blog_sort'%></td>
      <th><%= f.label :分类： ,:class => 'editblog'%></td>
      <td><%= f.text_field :blogtype ,:class => 'blog_sort'%></td>
  </tr>
  </table>
  <% if params[:section_id]%>
    <%= f.hidden_field :section_id, :value => params[:section_id] %>
  <% end %>
    <%= f.hidden_field :status, :value => 0 %>
    <%= f.hidden_field :editer, :value => 0 %>

  <div class="field">
    <%= f.kindeditor :artical , :class=>"blog_content" , :allowFileManager => false , :editor_id => 'my_editor' %>
  </div>

  <div class="actions">
    <%= f.submit :value => "发 布", :class => 'btn btn-primary'%>
  </div>
<% end %>
