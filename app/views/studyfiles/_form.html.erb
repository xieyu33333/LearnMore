<%= form_for(@studyfile, :html => {:multipart => true}) do |f| %>
  <% if @studyfile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@studyfile.errors.count, "error") %> prohibited this studyfile from being saved:</h2>

      <ul>
      <% @studyfile.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label '命名' %><br />
    <%= f.text_field :filename, :id => 'file_name'%>
  </div>

  <div class="field">
    <%= f.label '文档分类' %><br />
    <%= f.text_field :filetype%>
  </div>

  <div class="field">
    <%= f.label '外部链接' %><br />
    <%= f.text_field :outsite%> （填写链接地址）
  </div>

  <div class="field">
    <%= f.label '介绍' %><br />
    <%= f.text_area :description %>
  </div>

  <% if params[:section_id]%>
    <%= f.hidden_field :section_id, :value => params[:section_id] %>
  <% end %>

  <div class="field">
    <%= f.label '下载分数'%><br />
    <%= f.text_field :point %>
  </div>

  <p>
    <label>上传</label>
    <%= f.file_field :file_url, :id => 'file_uploader' %>
  </p>


  <div class="actions">
    <%= f.submit '提 交'%>
  </div>
<% end %>
